/**app.wxss**/
@import "/wxParse/wxParse.wxss";
@import '/lib/iconfont.wxss'; 
page{
  font-size: 28rpx;
  line-height: 1.6;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.xui_flex {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    position: relative;
}
.xui_flex_item {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1
}
.xui_align_items{
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center
}
.xui_lt{
  position: relative;
  color: #999999;
}
.xui_lt:after{
  content: "";
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border: 3rpx solid #999999;
  border-left-color: transparent;
  border-bottom-color: transparent;
  transform: rotate(45deg);
  top: 50%;
  margin-top: -8rpx;
}

.center{
  text-align: center;
  font-size: 30rpx;
}

.ellipsis{
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.line{
  height: 80rpx;
}
.cut_line{
  height: 20rpx;
  background:#f5f3f1; 
}

/*站点  */

.site_list{
  padding: 30rpx;
  border-bottom: 1rpx solid #f8f8f8;
  font-size: 26rpx;
}
.site_title{
  font-size: 32rpx;
}
.site_address{
  padding: 10rpx 0;
}

.site_tel text{
  color: #169BD5;
  padding-left: 20rpx;
}
.site_btn{
  background-color: rgba(255, 204, 51, 1);
  color: #fff;
  padding: 10rpx 0;
  margin-bottom: 8rpx;
}
.set_dan{
  width: 100rpx;
  text-align: center;
}

/*弹窗*/
.modal_box{
  position: fixed;
  background: rgba(0,0,0,0.5);
  width: 100%;
  height: 100%;
  z-index: 999;
  top: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center
}

.modal{
  width: 80%;
  background: #fff;
  margin: 0 auto;
  border-radius: 20rpx;
  overflow: hidden;
  padding-top: 40rpx;
}
.modal_title{
  text-align: center;
  font-size:34rpx;
  padding-bottom:30rpx;
}
.modal_contant{
  padding: 0 30rpx 40rpx;
}
.modal_btn{
  border-top: 1rpx solid #f8f8f8;
}
.modal_btn view{
  height: 80rpx;
  line-height: 80rpx;
}
.sure{
  border-left: 1rpx solid #f8f8f8
}

.cancel{
  color: rgb(153, 153, 153);
}


